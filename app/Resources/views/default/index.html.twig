{% extends 'base.html.twig' %}
{% block navbar %}{% include ('navbar/navbar.html.twig') %}{% endblock %}
	{% block accueil %}
		{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
			<div class="col-md-12 accueil1">
				<div class="col-md-6 col-md-offset-3 box-accueil">
					<h1>Bienvenue dans Wild Village <b>{{ app.user.username }}</b></h1>
					</br>
					<h2>n'hésite pas à aller ajouter des infos sur ton espace en cliquant juste <a href="#"><u>ici</u></a>!<h2>
				</div>
				<div class="col-md-8 col-md-offset-2 box-publi">
					<h2>Dernières publications</h2>
					<div class="newpost-container">

  <form method="post" action="{{ path ('post_new') }}">

    <div class="row">
      <div class="col-lg-offset-2 col-md-offset-2 col-lg-8 col-md-8 text-center"> 
        <textarea class="post-textarea form-control text-center" name="contenu" placeholder="Un message à partager aux autres internautes?"></textarea>
      </div>
    </div>
  <div class="row">
    <div class="col-lg-offset-2 col-md-offset-2 col-lg-8 col-md-8 text-center">
      <input type="submit">
      
    </div>
  </div>
  </form>
  </div>

          
    <div class="col-lg-offset-3 col-md-offset-3 col-lg-6 col-md-6 posts">

      {% for pst in tab|reverse %}
      <div class="post-box">
        <p class="text-center"><b>Publié par {{ pst['auteur']|upper }}</b></p>
        <p class="text-center">{{ pst['contenu'] }}</p>
      </div>
      {% endfor %}

    </div>
				</div>
			</div>

		{% else %}
			<div class="col-md-12 accueil2">
				<div class="col-md-6 col-md-offset-3 box-accueil">
					<h1>Bienvenue dans Wild Village !</h1>
					<a href="{{ path('user_register') }}"><button type="button" class="btn btn-accueil">Rejoins nous !</button></a>
				</div>
			</div>
		{% endif %}
	{% endblock %}
{% block footer %}{% include ('footer/footer.html.twig') %}{% endblock %}
